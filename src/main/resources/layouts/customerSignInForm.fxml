<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kg.megacom.restaurantclientapp.controllers.customerControllers.CustomerSignInCtrl">
   <children>
      <TextField fx:id="txtPhone" layoutX="132.0" layoutY="92.0" prefHeight="25.0" prefWidth="298.0" promptText="Введите номер телефона 0550 550 550">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passField" layoutX="132.0" layoutY="148.0" prefHeight="25.0" prefWidth="298.0" promptText="Введите пароль">
         <font>
            <Font size="15.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnEnter" defaultButton="true" layoutX="132.0" layoutY="218.0" mnemonicParsing="false" onAction="#onButtonClicked" prefHeight="31.0" prefWidth="103.0" text="Войти">
         <font>
            <Font size="16.0" />
         </font></Button>
      <Button fx:id="btnCancel" cancelButton="true" layoutX="275.0" layoutY="218.0" mnemonicParsing="false" onAction="#onButtonClicked" prefHeight="37.0" prefWidth="103.0" text="Отмена">
         <font>
            <Font size="15.0" />
         </font></Button>
      <Button fx:id="btnSignUp" layoutX="420.0" layoutY="14.0" mnemonicParsing="false" onAction="#onButtonClicked" prefHeight="30.0" prefWidth="155.0" text="Зарегистрироваться">
         <font>
            <Font size="14.0" />
         </font></Button>
   </children>
</AnchorPane>
